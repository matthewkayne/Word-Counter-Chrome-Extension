{
  "manifest_version": 2,

  "name": "Word Counter",
  "description": "This extension counts the number of words in a given input",
  "version": "1.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"]
}
